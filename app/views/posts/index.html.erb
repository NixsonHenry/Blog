<div class="row ">
    <div class="col-md-12"><p class="name">All Posts</p><hr class="color_3"></div> 

    <div class="col-md-12 marg-left">
        <% @posts.each do |post| %>
    <div class="post_wrapper title-0 border border-1 mb-5 pl-3 pull">
        <h2 class="title "><%= link_to post.title, post, class: 'text' %></h2>
        <p class="date date-marg"><%= post.created_at.strftime("%B, %d, %Y") %></p>
    </div> 
<% end %> 
    </div>

</div>