<div class="container pr-5">
    <div class="post_wrapper mt-5 ml-4">
    <h1>New Post</h1>
<%= form_for :post, url: posts_path do |f| %>
    <p>
        <%= f.label :title %> <br>
        <%= f.text_field :title, class: 'form-control w-85' %>
    </p>
    <p>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                              
        <%= f.label :body %> <br>
        <%= f.text_area :body, class: 'form-control w-85', rows: 7 %>
    </p>
    <p>
        <%= f.submit class: 'btn btn-light round' %>
    </p>

<% end %>

</div>

</div>